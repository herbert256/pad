<blockquote>

{block}

  {true data='xref'}

    {sequence '1..{$lvl}'}
      <blockquote>
    {/sequence}

    <h3>{$type}</h3>

    <blockquote>

      {getXref '{!type}', '{$dir}', '{$xref}'}

        {if $dir}
          <a href="@pad@xref/dir{?dir}{?type}{?item}">{$item}</a>
        {elseif $pages}
          <a href="@pad@xref/pages{?pages}{?type}{?item}">{$item}</a>
        @else@
          {$item}
        {/if}

        &nbsp; 
        
      {/getXref}
            
    </blockquote>

    {sequence '1..{$lvl}'}
      </blockquote>
    {/sequence}

  {/true}

{/block}

</blockquote>