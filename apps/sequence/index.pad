{lines}
  {concepts}
    {if &concepts:key NE $concept}
      <a href="@self@&go=index&concept={&concepts:key}">{&concepts:key | ucfirst}</a>
    {else}
      <b> {&concepts:key | ucfirst} <b>
    {/if}
    {notLast} | {/notLast}
  {/concepts}
{/lines}

<h2>{$conceptTitle}</h2>

{block}
  {page 'concepts/{$concept}', include}
{/block}