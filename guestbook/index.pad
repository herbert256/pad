<!DOCTYPE html>
<html>
<head>
  <title>Guestbook</title>
  <style>
    body { font-family: sans-serif; max-width: 800px; margin: 2em auto; padding: 0 1em; }
    .message { border: 1px solid #ccc; padding: 1em; margin-bottom: 1em; border-radius: 4px; }
    .meta { color: #666; font-size: 0.9em; margin-bottom: 0.5em; }
    form { margin-bottom: 2em; background: #f9f9f9; padding: 1em; border-radius: 4px; }
    input[type="text"], textarea { width: 100%; padding: 0.5em; margin-bottom: 1em; box-sizing: border-box; }
    input[type="submit"] { padding: 0.5em 1em; }
  </style>
</head>
<body>

<h1>Guestbook</h1>

{if $submit}
  {code}
    if (isset($GLOBALS['name']) && isset($GLOBALS['message']) && $GLOBALS['name'] && $GLOBALS['message']) {
      padDb("insert into guestbook (name, message) values ('{name}', '{message}')", [
        'name' => $GLOBALS['name'],
        'message' => $GLOBALS['message']
      ]);
      echo "<p style='color: green'>Message added!</p>";
    } else {
      echo "<p style='color: red'>Please fill in all fields.</p>";
    }
  {/code}
{/if}

<form method="post">
  <label>Name:</label>
  <input type="text" name="name" required>
  <label>Message:</label>
  <textarea name="message" rows="5" required></textarea>
  <input type="submit" name="submit" value="Sign Guestbook">
</form>

<hr>

{code}
  $GLOBALS['messages'] = padDb("select * from guestbook order by created_at desc");
{/code}

{sequence messages}
{while messages}
  <div class="message">
    <div class="meta"><strong>{$name}</strong> at {$created_at}</div>
    <div>{$message}</div>
  </div>
{/while}

</body>
</html>